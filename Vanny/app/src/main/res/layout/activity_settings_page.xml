<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3C3C3C"
    tools:context=".SettingsPage">


    <ImageButton
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@null"
        android:src="@drawable/ic_baseline_arrow_back_ios_24"
        android:layout_margin="30dp"
        />

    <com.google.android.material.button.MaterialButton
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/notificationsBtn"
        android:layout_below="@id/backBtn"
        android:backgroundTint="#F5F5F5"
        android:layout_centerHorizontal="true"
        android:text="Notifications"
        android:textColor="#3C3C3C"
        app:fontFamily="@font/mallana"
        android:textAllCaps="false"
        android:letterSpacing="0.05"
        android:textSize="14dp"
        app:cornerRadius="50px"
        android:textFontWeight="600"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        />

    <com.google.android.material.button.MaterialButton
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/safetyBtn"
        android:layout_below="@id/notificationsBtn"
        android:backgroundTint="#F5F5F5"
        android:layout_centerHorizontal="true"
        android:text="Safety Mode"
        android:textColor="#3C3C3C"
        app:fontFamily="@font/mallana"
        android:textAllCaps="false"
        android:letterSpacing="0.05"
        android:textSize="14dp"
        app:cornerRadius="50px"
        android:textFontWeight="600"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:layout_marginTop="25dp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/lullabyBtn"
        android:layout_below="@id/safetyBtn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#F5F5F5"
        android:layout_centerHorizontal="true"
        android:text="Lullaby Management"
        android:textColor="#3C3C3C"
        app:fontFamily="@font/mallana"
        android:textAllCaps="false"
        android:letterSpacing="0.05"
        android:textSize="14dp"
        app:cornerRadius="50px"
        android:textFontWeight="600"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:layout_marginTop="25dp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/alarmsBtn"
        android:layout_below="@id/lullabyBtn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#F5F5F5"
        android:layout_centerHorizontal="true"
        android:text="Alarms"
        android:textColor="#3C3C3C"
        app:fontFamily="@font/mallana"
        android:textAllCaps="false"
        android:letterSpacing="0.05"
        android:textSize="14dp"
        app:cornerRadius="50px"
        android:textFontWeight="600"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:layout_marginTop="25dp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/videosBtn"
        android:layout_below="@id/alarmsBtn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#F5F5F5"
        android:layout_centerHorizontal="true"
        android:text="Videos"
        android:textColor="#3C3C3C"
        app:fontFamily="@font/mallana"
        android:textAllCaps="false"
        android:letterSpacing="0.05"
        android:textSize="14dp"
        app:cornerRadius="50px"
        android:textFontWeight="600"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:layout_marginTop="25dp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/reportBtn"
        android:layout_below="@id/videosBtn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#F5F5F5"
        android:layout_centerHorizontal="true"
        android:text="Report Analysis"
        android:textColor="#3C3C3C"
        app:fontFamily="@font/mallana"
        android:textAllCaps="false"
        android:letterSpacing="0.05"
        android:textSize="14dp"
        app:cornerRadius="50px"
        android:textFontWeight="600"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:layout_marginTop="25dp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/audioBtn"
        android:layout_below="@id/reportBtn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#F5F5F5"
        android:layout_centerHorizontal="true"
        android:text="Audio Analysis"
        android:textColor="#3C3C3C"
        app:fontFamily="@font/mallana"
        android:textAllCaps="false"
        android:letterSpacing="0.05"
        android:textSize="14dp"
        app:cornerRadius="50px"
        android:textFontWeight="600"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:layout_marginTop="25dp"
        />

</RelativeLayout>