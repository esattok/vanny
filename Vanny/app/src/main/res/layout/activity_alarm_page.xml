<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3C3C3C"
    tools:context=".AlarmPage">

    <ImageButton
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@null"
        android:src="@drawable/ic_baseline_arrow_back_ios_24"
        android:layout_margin="30dp"
        />

    <TextView
        android:id="@+id/alarmText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/backBtn"
        android:layout_marginTop="-30dp"
        android:padding="30dp"
        android:text="Alarms"
        android:textColor="#F5F5F5"
        android:textSize="25dp"
        app:fontFamily="@font/mallana" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/alarmOne"
        android:layout_below="@id/alarmText"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:backgroundTint="#F5F5F6"
        app:cornerRadius="50px"
        android:layout_margin="15dp"
        android:text=" 9.54pm"
        android:textSize="18dp"
        android:textColor="#3C3C3C"
        android:fontFamily="@font/mallana"
        android:textAlignment="textStart"
        android:drawableLeft="@drawable/ic_baseline_access_alarm_24"
        android:drawableTint="#3C3C3C"
        android:drawableRight="@drawable/ic_baseline_delete_24"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/alarmBtn"
        android:backgroundTint="#F5F5F5"
        android:textColor="#3C3C3C"
        android:fontFamily="@font/mallana"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:text="Add New Alarm"
        android:paddingLeft="50dp"
        android:paddingTop="10dp"
        android:paddingRight="50dp"
        android:paddingBottom="10dp"
        app:cornerRadius="50px"
        />

</RelativeLayout>