<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3C3C3C"
    tools:context=".NotificationPage">

    <ImageButton
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@null"
        android:src="@drawable/ic_baseline_arrow_back_ios_24"
        android:layout_margin="30dp"
        />

    <TextView
        android:id="@+id/safetyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/backBtn"
        android:layout_marginTop="-30dp"
        android:padding="30dp"
        android:text="Notifications"
        android:textColor="#F5F5F5"
        android:textSize="25dp"
        app:fontFamily="@font/mallana" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/dangerToggle"
        android:layout_below="@id/safetyText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Danger Alerts"
        android:textColor="#F5F5F5"
        android:textSize="18dp"
        app:fontFamily="@font/mallana"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/cryingToggle"
        android:layout_below="@id/dangerToggle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Crying Alerts"
        android:textColor="#F5F5F5"
        android:textSize="18dp"
        app:fontFamily="@font/mallana"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_marginTop="20dp"
        />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/repotToggle"
        android:layout_below="@id/cryingToggle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Report Analysis Report"
        android:textColor="#F5F5F5"
        android:textSize="18dp"
        app:fontFamily="@font/mallana"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_marginTop="20dp"
        />


</RelativeLayout>