<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3C3C3C"
    tools:context=".LullabyPage">

    <ImageButton
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@null"
        android:src="@drawable/ic_baseline_arrow_back_ios_24"
        android:layout_margin="30dp"
        />

    <TextView
        android:id="@+id/lullabyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/backBtn"
        android:layout_marginTop="-30dp"
        android:padding="30dp"
        android:text="Lullaby Management"
        android:textColor="#F5F5F5"
        android:textSize="25dp"
        app:fontFamily="@font/mallana" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/lullabyOne"
        android:layout_below="@id/lullabyText"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:backgroundTint="#F5F5F6"
        app:cornerRadius="50px"
        android:layout_margin="15dp"
        android:text=" Recording2022_12_19 \n 9.54PM"
        android:textColor="#3C3C3C"
        android:fontFamily="@font/mallana"
        android:textAlignment="textStart"
        android:drawableLeft="@drawable/ic_baseline_play_arrow_24"
        android:drawableTint="#3C3C3C"
        />

    <ImageButton
        android:id="@+id/recordBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:src="@drawable/ic_baseline_mic_24"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        />

</RelativeLayout>