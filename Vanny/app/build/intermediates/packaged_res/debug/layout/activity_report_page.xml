<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3C3C3c"
    tools:context=".ReportPage">

    <ImageButton
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@null"
        android:src="@drawable/ic_baseline_arrow_back_ios_24"
        android:layout_margin="30dp"
        />

    <TextView
        android:id="@+id/videoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/backBtn"
        android:layout_marginTop="-30dp"
        android:padding="30dp"
        android:text="Reports"
        android:textColor="#F5F5F5"
        android:textSize="25dp"
        app:fontFamily="@font/mallana" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/reportOne"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/videoText"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="#F5F5F6"
        android:drawableLeft="@drawable/ic_baseline_folder_zip_24"
        android:drawableTint="#3C3C3C"
        android:fontFamily="@font/mallana"
        android:text=" Report_20220509 \n 9.54PM"
        android:textAlignment="textStart"
        android:textColor="#3C3C3C"
        app:cornerRadius="50px" />

</RelativeLayout>